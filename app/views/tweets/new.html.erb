<div class = "middle">
	<div class = "container">
		<div class = "col-md-9 content">
			<%= simple_form_for @tweet do |f| %>
  			<%= f.input :tweet, label: 'Give a shout!'  %>
  			<%= f.button :submit, label: 'Tweet it!' %>
			<% end %>

		</div>
		<div class= "col-md-3 content">

			<div class="panel">
			<h1><b>Your Tweets:</b></h1> <br><br>

				<ul>
					<% @tweets.each do |t| %>
						<li class="alert alert-info" role="alert"><%= t.tweet%> <p class = "text-muted" style = "font-size: 70%"> <%= time_ago_in_words(t.created_at) %> ago<br> </p>
						</li>
					<%end%>
				</ul>
			</div>
		</div>
	</div>
</div>